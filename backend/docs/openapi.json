{
  "openapi": "3.0.3",
  "info": {
    "title": "Luma Sticker Store API",
    "description": "Dokumentasi API untuk project Luma Sticker (E-commerce Digital Assets).",
    "version": "1.0.0",
    "contact": {
      "name": "Abdian Developer",
      "email": "abdian@example.com"
    }
  },
  "servers": [
    {
      "url": "http://localhost:3000/api",
      "description": "Local Server (Port 3000)"
    },
    {
      "url": "https://lumasticker.vercel.app/api",
      "description": "Production Server"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "Product": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "example": 1
          },
          "name": {
            "type": "string",
            "example": "Sticker Pack Vol. 1 (Chibi Style)"
          },
          "price": {
            "type": "number",
            "example": 15000
          },
          "description": {
            "type": "string",
            "example": "Stiker lucu format PNG & PDF resolusi tinggi."
          },
          "image_url": {
            "type": "string",
            "description": "URL gambar utama (diambil dari images[0])",
            "example": "http://localhost:5000/uploads/1700000000-file.png"
          },
          "images": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "example": [
              "filename1.png",
              "filename2.png"
            ]
          }
        }
      },
      "Transaction": {
        "type": "object",
        "properties": {
          "order_id": {
            "type": "string",
            "example": "LUMA-173859..."
          },
          "gross_amount": {
            "type": "number",
            "example": 15000
          },
          "customer_name": {
            "type": "string",
            "example": "Budi"
          },
          "transaction_status": {
            "type": "string",
            "example": "settlement"
          }
        }
      }
    }
  },
  "tags": [
    {
      "name": "Auth",
      "description": "Autentikasi Admin (JWT)"
    },
    {
      "name": "Products",
      "description": "Manajemen Sticker Pack"
    },
    {
      "name": "Payment",
      "description": "Integrasi Midtrans"
    }
  ],
  "paths": {
    "/admin/login": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Login Admin",
        "description": "Dapatkan Token JWT untuk mengakses fitur Admin.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "email",
                  "password"
                ],
                "properties": {
                  "email": {
                    "type": "string",
                    "example": "admin@luma.com"
                  },
                  "password": {
                    "type": "string",
                    "example": "password123"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login Berhasil (Simpan token ini)",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": {
                      "type": "string",
                      "example": "eyJhGci..."
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/admin/logout": {
      "delete": {
        "tags": [
          "Auth"
        ],
        "summary": "Logout Admin",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Logout berhasil"
          }
        }
      }
    },
    "/products": {
      "get": {
        "tags": [
          "Products"
        ],
        "summary": "Ambil Semua Produk (Public)",
        "responses": {
          "200": {
            "description": "List Produk",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Product"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "Products"
        ],
        "summary": "Tambah Produk Baru (Admin)",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "required": [
                  "name",
                  "price",
                  "description"
                ],
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "price": {
                    "type": "number"
                  },
                  "description": {
                    "type": "string"
                  },
                  "images": {
                    "type": "array",
                    "items": {
                      "type": "string",
                      "format": "binary"
                    },
                    "description": "Upload hingga 20 gambar"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Produk Created"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/products/{id}": {
      "put": {
        "tags": [
          "Products"
        ],
        "summary": "Update Produk",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "price": {
                    "type": "number"
                  },
                  "description": {
                    "type": "string"
                  },
                  "images": {
                    "type": "array",
                    "items": {
                      "type": "string",
                      "format": "binary"
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Update Berhasil"
          }
        }
      },
      "delete": {
        "tags": [
          "Products"
        ],
        "summary": "Hapus Produk Satuan",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Terhapus"
          }
        }
      }
    },
    "/products/bulk-delete": {
      "post": {
        "tags": [
          "Products"
        ],
        "summary": "Hapus Banyak Produk Sekaligus",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "ids": {
                    "type": "array",
                    "items": {
                      "type": "integer"
                    },
                    "example": [
                      1,
                      5,
                      8
                    ]
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Produk berhasil dihapus"
          }
        }
      }
    },
    "/payment/purchase": {
      "post": {
        "tags": [
          "Payment"
        ],
        "summary": "Buat Transaksi (Snap Token)",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "product_id",
                  "customer_name",
                  "customer_email"
                ],
                "properties": {
                  "product_id": {
                    "type": "integer"
                  },
                  "customer_name": {
                    "type": "string"
                  },
                  "customer_email": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Token Transaksi Dibuat"
          }
        }
      }
    },
    "/payment/notification": {
      "post": {
        "tags": [
          "Payment"
        ],
        "summary": "Webhook Midtrans (Jangan ditembak manual)",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/payment/admin/transactions": {
      "get": {
        "tags": [
          "Payment"
        ],
        "summary": "Lihat Semua Riwayat Transaksi (Admin)",
        "description": "NOTE: Endpoint ini belum diproteksi middleware di kode, disarankan segera tambahkan verifyToken.",
        "responses": {
          "200": {
            "description": "List Transaksi",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Transaction"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}